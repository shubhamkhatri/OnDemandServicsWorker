<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0F000000"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/sbl_image_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sbl_image"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/car_mini" />

                <TextView
                    android:id="@+id/sbl_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Rs 000"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sbl_status_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/sbl_image_ll"
                android:orientation="vertical"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/sbl_wash_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_service"
                    android:drawablePadding="6dp"
                    android:drawableTint="@android:color/holo_blue_dark"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="wash clean vacuum"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sbl_car_model_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_car"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="car model" />

                <TextView
                    android:id="@+id/sbl_car_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_number"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="car number" />


                <TextView
                    android:id="@+id/sbl_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/ic_date_time"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="date time"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
